
public class BanbokTEST1 {

	public static void main(String[] args) {
 int hap = 0;
 int i = 0;
 
 for (;;) {
	 for(i = 1; i <= 100; i++) {
		 hap += i;
		 if(hap > 2000) {
			 System.out.println("합계 : " + hap);
			 hap = 0;
			// break;
			 return; //함수를 완전히 끝내겠다  brack보다 확장된 의미
		 }
	 }
	 System.out.println("아직도 반복중...");
 }
	}

}
